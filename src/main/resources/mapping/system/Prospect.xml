<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.admin.dao.system.ProspectDao">
    <resultMap id="prospectMap" type="com.admin.entity.system.Prospect">
        <id property="id" column="id"/>
        <result property="customerName" column="customer_name"/>
        <result property="customerAddress" column="customer_address"/>
        <result property="name" column="name"/>
        <result property="mobile" column="mobile"/>
        <result property="prospectTime" column="prospect_time"/>
        <result property="prospectContent" column="prospect_content"/>
        <result property="prospectArea" column="prospect_area"/>
        <result property="prospectRequire" column="prospect_require"/>
        <result property="prospectName" column="prospect_name"/>
        <result property="prospectStatus" column="prospect_status"/>
        <result property="prospectFileAddress" column="prospect_file_address"/>
        <result property="customerStatus" column="customer_status"/>
        <result property="submitName" column="submit_name"/>
        <result property="submitTime" column="submit_time"/>
        <result property="createdBy" column="created_by"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedBy" column="updated_by"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <sql id="columns">
        customer_name,customer_address,name,mobile,prospect_time,prospect_content,prospect_area,prospect_require,prospect_name,prospect_status,
        prospect_file_address,customer_status,submit_name,submit_time,created_by,created_at,updated_by,updated_at
    </sql>
    <sql id="table">prospect</sql>

    <select id="getById" resultMap="prospectMap" parameterType="java.lang.Integer">
        select id,<include refid="columns"/>
        from <include refid="table"/>
        where id = #{id}
    </select>

    <select id="getProspectList"  parameterType="Map"  resultMap="prospectMap">
        SELECT id,<include refid="columns"/>
        FROM <include refid="table"/>
        WHERE enable = 1
        <include refid="prospectQuery"/>
        Order By updated_at DESC
        <if test="m!=null and n!=null">
            Limit ${m},${n}
        </if>
    </select>

    <sql id="prospectQuery">
        <if test="customerName != null and customerName != ''">
            AND customer_name = #{customerName}
        </if>
        <if test="customerStatus != null">
            AND customer_status = #{customerStatus}
        </if>
        <if test="prospectStatus != null">
            AND prospect_status = #{prospectStatus}
        </if>
    </sql>

    <insert id="insert" parameterType="com.admin.entity.system.Prospect" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO <include refid="table"/>(<include refid="columns"/>)
        VALUES(
        #{customerName},
        #{customerAddress},
        #{name},
        #{mobile},
        #{prospectTime},
        #{prospectContent},
        #{prospectArea},
        #{prospectRequire},
        #{prospectName},
        #{prospectStatus},
        #{prospectFileAddress},
        #{customerStatus},
        #{submitName},
        #{submitTime},
        #{createdBy},
        now(),
        #{updatedBy},
        now()
        )
    </insert>

    <update id="update" parameterType="com.admin.entity.system.Prospect">
        update <include refid="table"/>
        <set>
            <if test="customerName != null">
                customer_name = #{customerName},
            </if>
            <if test="customerAddress != null">
                customer_address = #{customerAddress},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="mobile != null">
                mobile = #{mobile},
            </if>
            <if test="prospectTime != null">
                prospect_time = #{prospectTime},
            </if>
            <if test="prospectContent != null">
                prospect_content = #{prospectContent},
            </if>
            <if test="prospectArea != null">
                prospect_area = #{prospectArea},
            </if>
            <if test="prospectRequire != null">
                prospect_require = #{prospectRequire},
            </if>
            <if test="prospectName != null">
                prospect_name = #{prospectName},
            </if>
            <if test="prospectStatus != null">
                prospect_status = #{prospectStatus},
            </if>
            <if test="prospectFileAddress != null">
                prospect_file_address = #{prospectFileAddress},
            </if>
            <if test="customerStatus != null">
                customer_status = #{customerStatus},
            </if>
            <if test="updatedBy != null">
                updated_by = #{updatedBy},
            </if>
            updated_at = now()
        </set>
        <where>
            id = #{id}
        </where>
    </update>
</mapper>
